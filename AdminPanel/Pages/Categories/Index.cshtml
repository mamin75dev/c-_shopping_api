@page
@model AdminPanel.Pages.Categories.Index

@{
    ViewData["Title"] = "دسته بندی ها";
    var categories = Model.Categories;
}

<!DOCTYPE html>

<html>

<head>
    <title>دسته بندی ها</title>
</head>

<body>
<div class="container p-3" style="width:50%">

    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">دسته بندی ها</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/AddCategory" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                &nbsp; دسته بندی جدید
            </a>
        </div>
    </div>

    <br/><br/>

    <table class="table table-bordered">
        <thead>
        <tr class="table-info">
            <th>ردیف</th>
            <th>نام</th>
            <th>عملیات</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in categories)
        {
            <tr onclick="location.href = '@(Url.Page("/Products/Index", new { catId = obj.Id }))'" style="cursor:pointer;">
                <td>@obj.Id</td>
                <td>
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <i class="bi bi-@obj.Image"></i>
                                <span style="margin-right: 5px;">@obj.Name</span>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="w-25 btn-group" role="group">
                        <a asp-page="/Categories/AddCategory" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-page="" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
</body>

</html>